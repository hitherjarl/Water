<h1><%= @id %></h1>

<div style="float:left; width:30%; margin-left: 20px; margin-right: 20px; text-align: center;">
  <img src="<%= @Waters.url %>" alt="" width=100%;>
</div>

<div style="float:left; width:60%;">
  <h2 class="name"> <%= @Waters.name %> </h2>
  <div class="caption"><%= @Waters.caption %></div>
  <p> Progress: </p>
    <div class="progress">
      <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
    <span class="sr-only">40% Complete (success)</span>
      </div>
    </div>
  
  <a href="/Water/<%= @Waters.id %>/edit">Edit </a> |
  <a href="/Water/<%= @Waters.id %>/destroy">Delete</a>
  <div class="details">
    <div>User: <%= @user.name %></div>
</div>
</div>
