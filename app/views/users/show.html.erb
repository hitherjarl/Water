<h1>User #<%= @user.id %></h1>

<div>
  <strong>Name</strong>:<br />
  <p><%= @user.name %></p>
</div>
<div>
  <strong>Email</strong>:<br />
  <p><%= @user.email %></p>
</div>
<ul>
  <% @Waters.each do |water| %>
    <li><img src="<%= water.url %>"></li>
  <% end %>
</ul>
